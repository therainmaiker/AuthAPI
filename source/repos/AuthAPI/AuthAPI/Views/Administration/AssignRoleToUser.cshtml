@model AssignRoleToUser
@{
    ViewData["Title"] = "AssignRoleToUser";
}


<div class="row">
    <div class="col-md-4">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                <strong>Success!</strong>  @TempData["Message"]
            </div>
        }

        <form asp-controller="Administration" asp-action="AssignRoleToUser" method="post">
            <h4>Assign Role to User</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
           
            
            <div class="form-group">
                <label asp-for="UserId"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            
            

            
            <div class="form-group">
                <label asp-for="RoleId"></label>

                <select asp-for="RoleId"
                        class="form-control"
                        asp-items="@(new SelectList(Model.ListRole,"Value", "Text"))">
                </select>
                <span asp-validation-for="@Model.RoleId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Assign Role</button>
        </form>
    </div>

</div>


